<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="343dp"
        android:layout_height="703dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <Spinner
        android:id="@+id/countryDropDown"
        android:layout_width="311dp"
        android:layout_height="49dp"
        android:entries="@array/countries_array"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <TextView
        android:id="@+id/textViewSettingsTitle"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:text="Settings"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <EditText
        android:id="@+id/editTextSettingsEmail"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="237dp" />

    <Spinner
        android:id="@+id/gendersDropDown"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:entries="@array/genders_array"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/textViewNeedHelp"
        android:layout_width="122dp"
        android:layout_height="42dp"
        android:text="Need Help?"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="466dp" />

    <Button
        android:id="@+id/buttonSuicideHotline"
        android:layout_width="148dp"
        android:layout_height="51dp"
        android:text="Suicide Hotline"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="466dp" />
</androidx.constraintlayout.widget.ConstraintLayout>