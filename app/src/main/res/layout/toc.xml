<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="166dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/textViewTOC"
        android:layout_width="373dp"
        android:layout_height="348dp"
        android:text="Terms of Service  By downloading and using the Daily Mood Generator mobile application (&quot;App&quot;), you agree to comply with and be bound by these Terms of Service. This App is designed to help you reflect on and record your daily emotional state for personal well-being purposes. You are solely responsible for the content you input, and we recommend keeping entries appropriate and respectful. The App does not share, sell, or store your personal data beyond what is necessary for its core functionality.  Daily Mood Generator may update or change features at any time without prior notice. Continued use of the App after such changes signifies your acceptance of the updated terms. The App is provided &quot;as is&quot; without warranties of any kind, and we make no guarantees regarding its performance or the accuracy of mood suggestions. We are not liable for any emotional, psychological, or physical outcomes related to the use of this App. If you do not agree with these terms, please refrain from using Daily Mood Generator."
        tools:layout_editor_absoluteX="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="139dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.806" />

    <Button
        android:id="@+id/buttonToc"
        android:layout_width="159dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/orange"
        android:text="Button"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />
</androidx.constraintlayout.widget.ConstraintLayout>